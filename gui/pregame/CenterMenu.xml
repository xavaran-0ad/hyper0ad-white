<?xml version="1.0" encoding="utf-8"?>
<object>

	<object name="mainMenu" size="50%-510 39% 50%+510 100%" z="50">

		<object name="MainBack" type="image" style="CenterMenu" size="0%-2 0%-2 100%+2 0%+82"/>

		<object name="mainMenuButtons" size="0% 0% 100% 100%">
			<repeat count="10">
				<object name="mainMenuButton[n]" type="button" style="MainMenuButton" tooltip_style="shinyMainMenuTooltip"/>
			</repeat>
		</object>



		<object name="submenu" size="0% 0% 100% 100%" hidden="true">
			<object name="submenuButtons" size="0% 0%+80 100% 85%" tooltip_style="shinyMainMenuTooltip">
				<repeat count="30">
					<object type="button" style="SubMenuButton" tooltip_style="shinyMainMenuTooltip"/>
				</repeat>
			</object>
		</object>
	</object>

	<!-- Hide submenu when user clicks on the background -->
	<object name="closeMenuButton" type="button" hotkey="cancel"/>

</object>
